# Domain Configuration
DOMAIN=yourdomain.com

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=changeme-strong-password

# GlitchTip Configuration
GLITCHTIP_SECRET_KEY=changeme-please-generate-a-new-key-using-openssl-rand-hex-32
GLITCHTIP_DB_PASSWORD=changeme-strong-password

# Email Configuration for GlitchTip (Optional)
# Format: smtp://username:password@smtp.example.com:587/?ssl=True
# For Gmail: smtp://your-email@gmail.com:your-app-password@smtp.gmail.com:587/?ssl=True
# For console testing: consolemail://
GLITCHTIP_EMAIL_URL=consolemail://
GLITCHTIP_FROM_EMAIL=glitchtip@yourdomain.com

# Auto-logging Service Configuration
AUTOLOG_WEBHOOK_SECRET=changeme-generate-random-string
ERROR_THRESHOLD_COUNT=10
ERROR_THRESHOLD_WINDOW_MINUTES=5
AUTOLOG_TTL_MINUTES=30
AUTOLOG_LOG_LEVEL=INFO

# Prometheus Configuration
PROMETHEUS_RETENTION=30d

# Application-specific environment variables
# These will be used by your instrumented applications

# Jaiye Service
JAIYE_GLITCHTIP_DSN=
JAIYE_ENVIRONMENT=production
JAIYE_OTEL_ENDPOINT=http://otel-collector:4317

# Add more services as needed
# SERVICE_NAME_GLITCHTIP_DSN=
# SERVICE_NAME_ENVIRONMENT=
# SERVICE_NAME_OTEL_ENDPOINT=
